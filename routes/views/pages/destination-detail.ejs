<div class="hero min-h-96 bg-base-200 relative"></div>
    <div class="hero-content text-center">
        <div class="max-w-md">
            <h1 class="text-5xl font-bold"><%= destination.name %></h1>
            <div class="flex justify-center items-center gap-2 mt-4">
                <div class="badge badge-primary badge-lg">
                    <i class="fas fa-star mr-1"></i>
                    <%= destination.rating %>
                </div>
                <span class="text-2xl font-bold text-primary"><%= destination.price %></span>
            </div>
        </div>
    </div>
</div>

<div class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2">
            <div class="card bg-base-100 shadow-xl mb-8">
                <figure>
                    <img src="<%= destination.image %>" alt="<%= destination.name %>" class="w-full h-96 object-cover">
                </figure>
                <div class="card-body">
                    <h2 class="card-title text-2xl">About <%= destination.name %></h2>
                    <p class="text-base-content/70 leading-relaxed">
                        Discover the magic of <%= destination.name %>, where ancient traditions meet modern luxury. 
                        This incredible destination offers breathtaking landscapes, rich cultural heritage, and 
                        unforgettable experiences that will create memories to last a lifetime.
                    </p>
                </div>
            </div>
            
            <!-- Features -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
                <div class="card bg-base-100 shadow-lg">
                    <div class="card-body text-center">
                        <i class="fas fa-mountain text-3xl text-primary mb-2"></i>
                        <h3 class="card-title justify-center">Adventure</h3>
                        <p>Thrilling outdoor activities</p>
                    </div>
                </div>
                <div class="card bg-base-100 shadow-lg">
                    <div class="card-body text-center">
                        <i class="fas fa-utensils text-3xl text-primary mb-2"></i>
                        <h3 class="card-title justify-center">Cuisine</h3>
                        <p>Authentic local flavors</p>
                    </div>
                </div>
                <div class="card bg-base-100 shadow-lg">
                    <div class="card-body text-center">
                        <i class="fas fa-camera text-3xl text-primary mb-2"></i>
                        <h3 class="card-title justify-center">Photography</h3>
                        <p>Instagram-worthy spots</p>
                    </div>
                </div>
                <div class="card bg-base-100 shadow-lg">
                    <div class="card-body text-center">
                        <i class="fas fa-spa text-3xl text-primary mb-2"></i>
                        <h3 class="card-title justify-center">Relaxation</h3>
                        <p>Peaceful retreats</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Sidebar -->
        <div class="lg:col-span-1">
            <div class="card bg-base-100 shadow-xl sticky top-24">
                <div class="card-body">
                    <h3 class="card-title">Book Your Trip</h3>
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text">Check-in Date</span>
                        </label>
                        <input type="date" class="input input-bordered">
                    </div>
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text">Check-out Date</span>
                        </label>
                        <input type="date" class="input input-bordered">
                    </div>
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text">Guests</span>
                        </label>
                        <select class="select select-bordered">
                            <option>1 Guest</option>
                            <option>2 Guests</option>
                            <option>3 Guests</option>
                            <option>4+ Guests</option>
                        </select>
                    </div>
                    <div class="divider"></div>
                    <div class="flex justify-between items-center">
                        <span class="text-lg">Total:</span>
                        <span class="text-2xl font-bold text-primary"><%= destination.price %></span>
                    </div>
                    <a href="/booking" class="btn btn-primary btn-block mt-4">
                        <i class="fas fa-calendar-check mr-2"></i>
                        Book Now
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>