<div class="hero min-h-96 bg-gradient-to-r from-accent to-primary"></div>
    <div class="hero-content text-center text-primary-content">
        <div class="max-w-md">
            <h1 class="text-5xl font-bold">Contact Us</h1>
            <p class="text-xl mt-4">Let's plan your next adventure together</p>
        </div>
    </div>
</div>

<div class="container mx-auto px-4 py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Contact Form -->
        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <h2 class="card-title text-2xl mb-6">Send us a Message</h2>
                <form class="space-y-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text">First Name</span>
                            </label>
                            <input type="text" placeholder="John" class="input input-bordered" required>
                        </div>
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text">Last Name</span>
                            </label>
                            <input type="text" placeholder="Doe" class="input input-bordered" required>
                        </div>
                    </div>
                    
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text">Email</span>
                        </label>
                        <input type="email" placeholder="john@example.com" class="input input-bordered" required>
                    </div>
                    
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text">Subject</span>
                        </label>
                        <select class="select select-bordered" required>
                            <option disabled selected>Choose a topic</option>
                            <option>General Inquiry</option>
                            <option>Booking Support</option>
                            <option>Travel Planning</option>
                            <option>Partnership</option>
                        </select>
                    </div>
                    
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text">Message</span>
                        </label>
                        <textarea class="textarea textarea-bordered h-32" placeholder="Tell us about your dream destination..." required></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-block">
                        <i class="fas fa-paper-plane mr-2"></i>
                        Send Message
                    </button>
                </form>
            </div>
        </div>
        
        <!-- Contact Info -->
        <div class="space-y-8">
            <div class="card bg-base-100 shadow-lg">
                <div class="card-body">
                    <div class="flex items-center gap-4">
                        <div class="avatar">
                            <div class="w-12 rounded-full bg-primary text-primary-content flex items-center justify-center">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                        </div>
                        <div>
                            <h3 class="font-bold">Our Office</h3>
                            <p class="text-base-content/70">123 Travel Street, Adventure City, AC 12345</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card bg-base-100 shadow-lg">
                <div class="card-body">
                    <div class="flex items-center gap-4">
                        <div class="avatar">
                            <div class="w-12 rounded-full bg-secondary text-secondary-content flex items-center justify-center">
                                <i class="fas fa-phone"></i>
                            </div>
                        </div>
                        <div>
                            <h3 class="font-bold">Phone</h3>
                            <p class="text-base-content/70">+1 (555) 123-4567</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card bg-base-100 shadow-lg">
                <div class="card-body">
                    <div class="flex items-center gap-4">
                        <div class="avatar">
                            <div class="w-12 rounded-full bg-accent text-accent-content flex items-center justify-center">
                                <i class="fas fa-envelope"></i>
                            </div>
                        </div>
                        <div>
                            <h3 class="font-bold">Email</h3>
                            <p class="text-base-content/70">hello@travelexplorer.com</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card bg-base-100 shadow-lg">
                <div class="card-body">
                    <div class="flex items-center gap-4">
                        <div class="avatar">
                            <div class="w-12 rounded-full bg-info text-info-content flex items-center justify-center">
                                <i class="fas fa-clock"></i>
                            </div>
                        </div>
                        <div>
                            <h3 class="font-bold">Business Hours</h3>
                            <p class="text-base-content/70">Mon - Fri: 9AM - 6PM</p>
                            <p class="text-base-content/70">Sat - Sun: 10AM - 4PM</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>